{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "types": ["node"],
    "declaration": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}